<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WInUiBrower.Views.ServerConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WInUiBrower.Views"
    xmlns:component="using:WInUiBrower.Controller"
    xmlns:model="using:WInUiBrower.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
            <!-- 动态生成的控件列表 -->
            <ItemsControl ItemsSource="{x:Bind model:DynamicContants.Instance.Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <component:ConfigInfo Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
    </Grid>
</Page>
