<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="WInUiBrower.Controller.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="新增配置"
    PrimaryButtonText="确定"
    CloseButtonText="取消"
    Loaded="ContentDialog_Loaded">

    <StackPanel Spacing="12">
        <TextBox x:Name="KeyTextBox" Header="配置名称*" PlaceholderText="请输入配置名称" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="WorkingDirectoryTextBox" 
                 Header="工作目录*" 
                 PlaceholderText="请选择可执行文件"
                 IsReadOnly="True"
                 TextChanged="TextBox_TextChanged"/>
        <Button Content="浏览..." Click="BrowseButton_Click"/>
    </StackPanel>
</ContentDialog>