<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WInUiBrower.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WInUiBrower"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid x:Name="TitleBar" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <ImageIcon x:Name="TitleIcon" Source="Assets/logo.ico" Width="16" Height="16" VerticalAlignment="Center" />
                <TextBlock x:Name="TitleText" Text="服务管理" FontSize="15" FontFamily="Helvetica Neue" 
                   VerticalAlignment="Center" Margin="8,0,0,0" />
            </StackPanel>
        </Grid>
        
        <NavigationView
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            x:Name="RootNavigation"
            IsSettingsVisible="True" 
            SelectionChanged="RootNavigation_SelectionChanged"
            OpenPaneLength="150">
                <NavigationView.MenuItems>
                    <NavigationViewItem Icon="BrowsePhotos" Content="页面浏览" Tag="WebServer" />
                    <NavigationViewItem Icon="GoToStart" Content="服务管理" Tag="ServerManager" />
                    <NavigationViewItem Icon="Manage" Content="状态监控" Tag="StatusMonitor" />
                </NavigationView.MenuItems>
                <Frame x:Name="RootFrame"/>
        </NavigationView>
    </Grid>
</Window>
